{
  "name": "jssak",
  "version": "1.0.0",
  "description": "A modern JavaScript utility library aiming to collect popular helpers and learn functional programming.",
  "main": "dist/jssak.cjs.js",
  "module": "dist/jssak.esm.js",
  "browser": "dist/jssak.umd.js",
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "deploy": "yarn docs:build && gh-pages -d docs/.vuepress/dist/",
    "lint": "eslint src test",
    "build": "rimraf dist && rollup -c",
    "build:watch": "rollup -c -w",
    "pretest": "yarn build",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text mocha test/*.js",
    "test:watch": "mocha -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "keywords": [
    "utils",
    "helpers",
    "functional programming"
  ],
  "author": "Peizhao (Edgar) Li",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-plugin-istanbul": "^5.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.10.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.68.1",
    "rollup-plugin-babel": "^4.1.0",
    "vuepress": "^0.14.8"
  }
}
